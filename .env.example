# === SOURCE PRINCIPALE ===
PRIMARY_SOURCE=simkl  # simkl | plex | tautulli

# === SIMKL ===
SIMKL_CLIENT_ID=your_client_id
# ACCESS_TOKEN généré automatiquement via OAuth (stocké dans .simkl_token)

# === PLEX (optionnel) ===
PLEX_URL=http://localhost:32400
PLEX_TOKEN=your_plex_token

# === TAUTULLI (optionnel) ===
TAUTULLI_URL=http://localhost:8181
TAUTULLI_API_KEY=your_api_key
TAUTULLI_USER_ID=1

# === TMDB (enrichissement) ===
TMDB_API_KEY=your_tmdb_api_key

# === OPTIONS ===
EXPORT_RATINGS=true
EXPORT_WATCHLIST=true
EXPORT_WATCHED=true
SKIP_SERIES=true  # Letterboxd = films uniquement
OUTPUT_DIR=./output
LOG_LEVEL=INFO
