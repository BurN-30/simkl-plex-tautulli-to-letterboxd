# === SOURCE PRINCIPALE ===
# simkl | plex | tautulli
PRIMARY_SOURCE=simkl

# === SIMKL ===
SIMKL_CLIENT_ID=your_client_id
SIMKL_CLIENT_SECRET=your_client_secret
# ACCESS_TOKEN généré automatiquement via OAuth (stocké dans .simkl_token)

# === PLEX (optionnel) ===
PLEX_URL=http://localhost:32400
PLEX_TOKEN=your_plex_token

# === TAUTULLI (optionnel) ===
TAUTULLI_URL=http://localhost:8181
TAUTULLI_API_KEY=your_api_key
TAUTULLI_USER_ID=1

# === TMDB (enrichissement) ===
TMDB_API_KEY=your_tmdb_api_key

# === OPTIONS ===
EXPORT_RATINGS=true
EXPORT_WATCHLIST=true
EXPORT_WATCHED=true
# Letterboxd = films uniquement
SKIP_SERIES=true
OUTPUT_DIR=./output
LOG_LEVEL=INFO

# === WEB INTERFACE ===
WEB_PORT=19876
OAUTH_PORT=19877
# Interval en minutes entre chaque sync automatique
SYNC_INTERVAL=15
